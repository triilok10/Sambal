@{
    ViewData["Title"] = "Sambal Mart - Home";
    Layout = "_Layout";
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/toastr.min.js"></script>
<link href="~/js/toastr.min.css" rel="stylesheet" />

<style>
    /* Custom Styling */
    .custom-container {
        height: 35vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f4f4f4;
        padding: 20px;
    }

    .connect-button {
        padding: 15px 30px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .connect-button:hover {
            background-color: white;
            color: #007bff;
        }

    .carousel-item img {
        width: 100%;
        height: auto;
    }

    .categories-section {
        padding: 50px 0;
        text-align: center;
    }

    .category {
        display: inline-block;
        margin: 20px;
        cursor: pointer;
        transition: transform 0.3s ease;
    }

        .category:hover {
            transform: scale(1.05);
        }

        .category img {
            width: 100%;
            max-width: 100px; /* Adjust the size as needed */
            height: auto;
        }

    .related-images {
        display: none;
        text-align: center;
        margin-top: 20px;
    }

        .related-images img {
            width: 80%;
            max-width: 300px;
            height: auto;
        }

    .content-wrapper {
        padding-bottom: 300px;
    }

    /* Media Query for Small Screens */
    @@media (max-width: 768px) {
        .custom-container h1 {
            font-size: 1.5rem;
        }

        .categories-section h2 {
            font-size: 1.5rem;
        }

        .category img {
            width: 80px;
        }

        .connect-button {
            font-size: 1.2rem;
            padding: 10px 20px;
        }
    }

    @@media (max-width: 576px) {
        .carousel-item img {
            width: 100%;
            height: auto;
        }

        .category img {
            width: 70px;
        }
    }
</style>

<div class="content-wrapper">
    <div class="container-fluid custom-container">
        <div class="text-center">
            <h1>Welcome to Sambal Mart</h1>
            <p>Discover a variety of products that cater to all your needs.</p>
            <button class="connect-button">Shop Now</button>
        </div>
    </div>

    <div id="productCarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active" style="display:flex; justify-content:center; align-items:center;">
                <img src="~/images/1.jpg" alt="Product 1" style="height:auto; width:100%;" />
                <div class="carousel-caption d-none d-md-block">
                    <h5>Product 1</h5>
                    <p>Description of Product 1.</p>
                </div>
            </div>
            <div class="carousel-item" style="display:flex; justify-content:center; align-items:center;">
                <img src="~/images/2.jpg" alt="Product 2" style="height:auto; width:100%;" />
                <div class="carousel-caption d-none d-md-block">
                    <h5>Product 2</h5>
                    <p>Description of Product 2.</p>
                </div>
            </div>
            <div class="carousel-item" style="display:flex; justify-content:center; align-items:center;">
                <img src="~/images/3.jpg" alt="Product 3" style="height:auto; width:100%;" />
                <div class="carousel-caption d-none d-md-block">
                    <h5>Product 3</h5>
                    <p>Description of Product 3.</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#productCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#productCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!-- Product Categories Section -->
    <div class="categories-section container">
        <h2>Product Categories</h2>

        <!-- Category items -->
        <div class="row justify-content-center">
            <div class="col-md-2 category" data-category="groceries">
                <img src="https://via.placeholder.com/100?text=Groceries" alt="Groceries">
                <p>Groceries</p>
            </div>
            <div class="col-md-2 category" data-category="food">
                <img src="https://via.placeholder.com/100?text=Food" alt="Food">
                <p>Food</p>
            </div>
            <div class="col-md-2 category" data-category="medicine">
                <img src="https://via.placeholder.com/100?text=Medicine" alt="Medicine">
                <p>Medicine</p>
            </div>
            <div class="col-md-2 category" data-category="kitchen-utensils">
                <img src="https://via.placeholder.com/100?text=Kitchen+Utensils" alt="Kitchen Utensils">
                <p>Kitchen Utensils</p>
            </div>
            <div class="col-md-2 category" data-category="electricity-items">
                <img src="https://via.placeholder.com/100?text=Electricity+Items" alt="Electricity Items">
                <p>Electricity Items</p>
            </div>
        </div>

        <!-- Related Images Section -->
        <div id="relatedImagesContainer" class="related-images">
            <div id='groceriesImages' style='display:none;'>
                <img src='https://via.placeholder.com/300?text=Grocery+Item+1' alt='Grocery Item 1'>
                <img src='https://via.placeholder.com/300?text=Grocery+Item+2' alt='Grocery Item 2'>
            </div>

            <div id='foodImages' style='display:none;'>
                <img src='https://via.placeholder.com/300?text=Food+Item+1' alt='Food Item 1'>
                <img src='https://via.placeholder.com/300?text=Food+Item+2' alt='Food Item 2'>
            </div>

            <div id='medicineImages' style='display:none;'>
                <img src='https://via.placeholder.com/300?text=Medicine+Item+1' alt='Medicine Item 1'>
                <img src='https://via.placeholder.com/300?text=Medicine+Item+2' alt='Medicine Item 2'>
            </div>
            <div id='kitchen-utensilsImages' style='display:none;'>
                <img src='https://via.placeholder.com/300?text=Kitchen-Utensils+Item+1' alt='Kitchen Utensils Item 1'>
                <img src='https://via.placeholder.com/300?text=Kitchen-Utensils+Item+2' alt='Kitchen Utensils Item 2'>
            </div>
            <div id='electricity-itemsImages' style='display:none;'>
                <img src='https://via.placeholder.com/300?text=Electricity-Items+Item+1' alt='Electricity Items Item 1'>
                <img src='https://via.placeholder.com/300?text=Electricity-Items+Item+2' alt='Electricity Items Item 2'>
            </div>
        </div>
    </div>
    <!-- Register Button -->
    <div class="text-center my-4">
        <a href="/Account/Register" class="connect-button">Register Now</a>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function(){
        $('#productCarousel').carousel({
            interval: 1500
        });

        $('.category').on('click', function() {
            var selectedCategory = $(this).data('category');
            $('.related-images > div').hide();
            $('#' + selectedCategory + 'Images').show();
            $('#relatedImagesContainer').show();
        });
    });
</script>
