<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sambal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sambal.styles.css" asp-append-version="true" />
</head>
<body style="user-select:none;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <b class="navbar-brand" asp-area="">Sambal</b>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="PartnerWithUs">Partner With Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link login-button" asp-area="" asp-controller="Login" asp-action="Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid mainLayout">
        <main role="main">
            @RenderBody()
        </main>
    </div>



    <footer class="footer text-muted" style="background-color: #f1f1f1; white-space:normal; padding: 30px 0;">
        <div class="container">
            <div style="display: flex; justify-content: space-between; flex-wrap: wrap; align-items: center;">

                <!-- Left Section -->
                <div class="col-12 col-md-6 d-flex flex-column justify-content-start align-items-start text-left mb-4 mb-md-0">
                    <div class="slogan-section" style="font-size: 2rem; font-weight: bold; color: #333;">
                        <h1 class="h2">Empowering Conversations,<br /> The Future of Chatbots</h1>
                        <h3 style="color: #777;">Transform your business with smart automation and conversational AI.</h3>
                    </div>
                </div>

                <!-- Right Section -->
                <div class="col-12 col-md-6 d-flex flex-column justify-content-start align-items-end text-right mb-4 mb-md-0 FixAlignRes">
                    <div class="links-section">
                        <ul class="list-unstyled" style="font-size: 1rem; color: #555;">
                            <li><a href="/" style="color: #555; text-decoration: none; margin-bottom: 10px;">Home</a></li>
                            <li><a href="/about" style="color: #555; text-decoration: none; margin-bottom: 10px;">About</a></li>
                            <li><a href="@Url.Action("Privacy", "Home")" style="color: #555; text-decoration: none;">Privacy</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Developer Section at the Bottom -->
            <div class="developer-section text-center" style="font-size: 0.9rem; color: #888; margin-top: auto;">
                <p>&copy; @DateTime.Now.Year - Developer: Trilok Chand Swami</p>
            </div>
        </div>
    </footer>

    <style>

        @@media (max-width: 576px) {
            .slogan-section h1 {
                font-size: 1.5rem;
            }

            .slogan-section h3 {
                font-size: 0.9rem;
            }

            .links-section ul {
                font-size: 0.8rem;
            }

            .FixAlignRes {
                align-items: center !important;
            }
        }

        @@media (min-width: 576px) and (max-width: 768px) {
            .slogan-section h1 {
                font-size: 1.8rem;
            }

            .slogan-section h3 {
                font-size: 1rem;
            }

            .links-section ul {
                font-size: 0.9rem;
            }

            .FixAlignRes {
                align-items: center !important;
            }
        }

        @@media (min-width: 768px) {
            .slogan-section h1 {
                font-size: 2rem;
            }

            .slogan-section h3 {
                font-size: 1.2rem;
            }

            .links-section ul {
                font-size: 1rem;
            }

            .FixAlignRes {
                align-items: center !important;
            }
        }

        @@media (min-width: 992px) {
            .slogan-section h1 {
                font-size: 2.5rem;
            }

            .slogan-section h3 {
                font-size: 1.5rem;
            }
        }

        .login-button {
            padding: 8px 16px;
            border-radius: 5px;
            background-color: #007bff;
            color: white;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: background 0.3s ease, box-shadow 0.3s ease;
        }

            .login-button:hover {
                background: linear-gradient(135deg, #007bff, #0056b3);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
                text-decoration: none;
            }

            .login-button:focus {
                outline: none;
            }

    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/toastr.min.js"></script>
    <link href="~/js/toastr.min.css" rel="stylesheet" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
